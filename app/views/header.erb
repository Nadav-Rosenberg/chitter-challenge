<header>
  <div id='logo'>Chitter</div>
  <div id='messages'>
    <% if current_user %>
      <span id='welcome-message'>
        Welcome, <%= current_user.email %>
      </span>

      <form id='sign-out' method='post' action='/sessions'>
        <input type='hidden' name='_method' value='delete'>
        <input type='submit' value='Sign Out'>
      </form>
  </div>
</header>